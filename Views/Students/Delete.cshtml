@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Student
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle"></i> <strong>Warning!</strong> 
                        This action cannot be undone. Please confirm you want to delete this student.
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6 class="text-muted">Student Number</h6>
                                    <p class="fs-5 fw-bold">@Model.StudentNumber</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Student ID</h6>
                                    <p class="fs-5">
                                        <span class="badge bg-secondary">@Model.Id</span>
                                    </p>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <h6 class="text-muted">Full Name</h6>
                                    <p class="fs-5">@Model.FullName</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <h6 class="text-muted">Email Address</h6>
                                    <p class="fs-5">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
