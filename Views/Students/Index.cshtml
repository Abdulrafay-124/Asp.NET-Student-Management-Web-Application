@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewData["Title"] = "Students Management";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="fas fa-graduation-cap"></i> Students Management
            </h1>
            <p class="text-muted">View, edit, and manage all students in the system</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Add New Student
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Student Number</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@student.StudentNumber</span>
                            </td>
                            <td>
                                <strong>@student.FullName</strong>
                            </td>
                            <td>
                                <a href="mailto:@student.Email">@student.Email</a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a asp-controller="Enrollments" asp-action="StudentCourses" asp-route-id="@student.Id" class="btn btn-sm btn-primary" title="View Courses">
                                    <i class="fas fa-book"></i> Courses
                                </a>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning" title="Edit Student">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger" title="Delete Student">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h5>No Students Found</h5>
            <p>There are no students in the system yet. Click "Add New Student" to get started!</p>
        </div>
    }
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
        cursor: pointer;
    }
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }
</style>
