@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle"></i> Student Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Student ID</h6>
                            <p class="fs-5">
                                <span class="badge bg-secondary">@Model.Id</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Student Number</h6>
                            <p class="fs-5 fw-bold">@Model.StudentNumber</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h6 class="text-muted">Full Name</h6>
                            <p class="fs-5 fw-bold">@Model.FullName</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h6 class="text-muted">Email Address</h6>
                            <p class="fs-5">
                                <a href="mailto:@Model.Email" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-envelope"></i> @Model.Email
                                </a>
                            </p>
                        </div>
                    </div>

                    <hr />

                    <div class="alert alert-light" role="alert">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> Record ID: <code>@Model.Id</code>
                        </small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Back to Students
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Edit Student
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Delete Student
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
