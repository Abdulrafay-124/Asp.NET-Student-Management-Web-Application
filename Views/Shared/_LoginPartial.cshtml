@using System.Security.Principal

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item me-3">
            <span class="navbar-text text-white">
                <i class="fas fa-user-circle"></i> @User.Identity?.Name
            </span>
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item">
            <a asp-action="Login" asp-controller="Account" class="nav-link text-white">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
        <li class="nav-item">
            <a asp-action="Register" asp-controller="Account" class="nav-link text-white">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>
    </ul>
}
