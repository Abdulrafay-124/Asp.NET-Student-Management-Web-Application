@model StudentManagement.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Create New Course
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <strong>Validation Errors:</strong>
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold">Course Code</label>
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter course code (e.g., CS101)" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                            <small class="text-muted">Example: CS101, MATH201, ENG102</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Course Title</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter course title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Credits" class="form-label fw-bold">Credit Hours</label>
                            <input asp-for="Credits" type="number" class="form-control form-control-lg" placeholder="Enter credit hours (1-4)" min="1" max="4" />
                            <span asp-validation-for="Credits" class="text-danger small"></span>
                            <small class="text-muted">Typical range: 1-4 credit hours</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to Courses
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
