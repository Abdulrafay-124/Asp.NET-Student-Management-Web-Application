@model StudentManagement.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-book-open"></i> Course Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Course ID</h6>
                            <p class="fs-5">
                                <span class="badge bg-secondary">@Model.Id</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Course Code</h6>
                            <p class="fs-5 fw-bold">@Model.Code</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h6 class="text-muted">Course Title</h6>
                            <p class="fs-5 fw-bold">@Model.Title</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h6 class="text-muted">Credit Hours</h6>
                            <p class="fs-5">
                                <span class="badge bg-info">@Model.Credits Credits</span>
                            </p>
                        </div>
                    </div>

                    <hr />

                    <div class="alert alert-light" role="alert">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> Record ID: <code>@Model.Id</code>
                        </small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Back to Courses
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Edit Course
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Delete Course
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
