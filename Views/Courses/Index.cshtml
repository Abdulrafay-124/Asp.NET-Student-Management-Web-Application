@model IEnumerable<StudentManagement.Models.Course>

@{
    ViewData["Title"] = "Courses Management";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="fas fa-book"></i> Courses Management
            </h1>
            <p class="text-muted">View, edit, and manage all courses in the system</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Add New Course
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Title</th>
                        <th class="text-center">Credits</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@course.Code</span>
                            </td>
                            <td>
                                <strong>@course.Title</strong>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info">@course.Credits Credits</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning" title="Edit Course">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger" title="Delete Course">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h5>No Courses Found</h5>
            <p>There are no courses in the system yet. Click "Add New Course" to get started!</p>
        </div>
    }
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
        cursor: pointer;
    }
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }
</style>
