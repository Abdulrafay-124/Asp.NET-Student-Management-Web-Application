@model IEnumerable<StudentManagement.Models.StudentEnrollmentViewModel>

@{
    ViewData["Title"] = "Student-Course Enrollment Summary";
}

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>
                <i class="fas fa-list"></i> Student-Course Enrollment Summary
            </h1>
            <p class="text-muted">View all students and their enrolled courses</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="accordion shadow-sm" id="studentAccordion">
                    @{
                        int index = 0;
                    }
                    @foreach (var enrollment in Model)
                    {
                        var student = enrollment.Student;
                        var courses = enrollment.Courses;
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading@(index)">
                                <button class="accordion-button @(!courses.Any() ? "collapsed" : "")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(index)" aria-expanded="@(courses.Any() ? "true" : "false")" aria-controls="collapse@(index)">
                                    <span class="fw-bold me-3">@student?.FullName</span>
                                    <span class="badge bg-info me-2">@student?.StudentNumber</span>
                                    <span class="badge bg-primary">@courses.Count() Courses</span>
                                </button>
                            </h2>
                            <div id="collapse@(index)" class="accordion-collapse collapse @(courses.Any() ? "show" : "")" aria-labelledby="heading@(index)" data-bs-parent="#studentAccordion">
                                <div class="accordion-body">
                                    @if (courses.Any())
                                    {
                                        <table class="table table-sm table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Course Code</th>
                                                    <th>Course Title</th>
                                                    <th>Credits</th>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <th>Actions</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var course in courses)
                                                {
                                                    <tr>
                                                        <td>
                                                            <span class="badge bg-secondary">@course.Code</span>
                                                        </td>
                                                        <td>@course.Title</td>
                                                        <td>
                                                            <span class="badge bg-success">@course.Credits</span>
                                                        </td>
                                                        @if (User.IsInRole("Admin"))
                                                        {
                                                            <td>
                                                                <a asp-controller="Enrollments" asp-action="Delete" asp-route-studentId="@student?.Id" asp-route-courseId="@course.Id" class="btn btn-sm btn-danger">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">No courses enrolled</p>
                                    }
                                </div>
                            </div>
                        </div>
                        index++;
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle"></i> <strong>No enrollment data available.</strong>
                    There are currently no students enrolled in any courses.
                </div>
            }
        </div>
    </div>
</div>
