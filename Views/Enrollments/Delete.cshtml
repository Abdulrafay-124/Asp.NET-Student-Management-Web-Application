@model StudentManagement.Models.StudentCourse

@{
    ViewData["Title"] = "Remove Enrollment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Remove Enrollment
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p class="mb-0">Are you sure you want to remove this enrollment?</p>
                    </div>

                    <div class="card mb-3 bg-light">
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Student:</strong>
                                <span class="badge bg-primary">@Model.Student?.FullName</span>
                            </p>
                            <p class="mb-2">
                                <strong>Student Number:</strong>
                                <span class="badge bg-info">@Model.Student?.StudentNumber</span>
                            </p>
                            <p class="mb-0">
                                <strong>Course:</strong>
                                <span class="badge bg-success">@Model.Course?.Title</span>
                            </p>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-studentId="@Model.StudentId" asp-route-courseId="@Model.CourseId" method="post">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger btn-lg flex-grow-1">
                                <i class="fas fa-trash"></i> Remove Enrollment
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg flex-grow-1">
                                <i class="fas fa-times-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
