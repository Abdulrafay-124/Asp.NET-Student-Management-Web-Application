@model StudentManagement.Models.StudentCourse

@{
    ViewData["Title"] = "Enroll Student in Course";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-pen-to-square"></i> Enroll Student in Course
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EnrollStudent" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label fw-bold">
                                <i class="fas fa-user"></i> Select Student
                            </label>
                            <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-control form-control-lg">
                                <option value="">-- Choose a student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label fw-bold">
                                <i class="fas fa-book"></i> Select Course
                            </label>
                            <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-control form-control-lg">
                                <option value="">-- Choose a course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg flex-grow-1">
                                <i class="fas fa-check-circle"></i> Enroll
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg flex-grow-1">
                                <i class="fas fa-times-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
