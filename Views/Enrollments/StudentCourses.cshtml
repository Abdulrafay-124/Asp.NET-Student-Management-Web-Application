@model IEnumerable<StudentManagement.Models.StudentCourse>

@{
    ViewData["Title"] = "Student Courses";
    var student = ViewBag.Student;
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-light shadow-sm">
                <div class="card-body">
                    <h2 class="mb-0">
                        <i class="fas fa-user-circle"></i> @student?.FullName
                    </h2>
                    <p class="text-muted mb-0">Student #: <strong>@student?.StudentNumber</strong></p>
                    <p class="text-muted mb-0">Email: <strong>@student?.Email</strong></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h3>
                    <i class="fas fa-book"></i> Enrolled Courses
                </h3>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="row g-3">
                    @foreach (var enrollment in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">@enrollment.Course?.Title</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <strong>Code:</strong>
                                        <span class="badge bg-info">@enrollment.Course?.Code</span>
                                    </p>
                                    <p class="card-text">
                                        <strong>Credits:</strong>
                                        <span class="badge bg-success">@enrollment.Course?.Credits</span>
                                    </p>
                                    <p class="card-text">
                                        <strong>Enrolled:</strong> @enrollment.EnrolledOn.ToString("MMM dd, yyyy")
                                    </p>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="card-footer bg-light">
                                        <a asp-controller="Enrollments" asp-action="Delete" asp-route-studentId="@enrollment.StudentId" asp-route-courseId="@enrollment.CourseId" class="btn btn-sm btn-danger w-100">
                                            <i class="fas fa-trash"></i> Remove Enrollment
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> <strong>No courses enrolled.</strong>
                    This student has not enrolled in any courses yet.
                </div>
            }
        </div>
    </div>

    <!-- Summary Card -->
    @if (Model.Any())
    {
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="card bg-light shadow-sm">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-6">
                                <h5>Total Courses</h5>
                                <p class="display-4 fw-bold text-primary">@Model.Count()</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Total Credits</h5>
                                <p class="display-4 fw-bold text-success">@Model.Sum(e => e.Course?.Credits ?? 0)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
