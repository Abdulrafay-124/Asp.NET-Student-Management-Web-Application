@model IEnumerable<StudentManagement.Models.StudentCourse>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="fas fa-user-graduate"></i> Student Course Enrollments
                </h1>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="EnrollStudent" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Enroll Student
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Student Name</th>
                                <th>Student Number</th>
                                <th>Course Code</th>
                                <th>Course Title</th>
                                <th>Credits</th>
                                <th>Enrolled On</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@enrollment.Student?.FullName</strong>
                                    </td>
                                    <td>@enrollment.Student?.StudentNumber</td>
                                    <td>
                                        <span class="badge bg-info">@enrollment.Course?.Code</span>
                                    </td>
                                    <td>@enrollment.Course?.Title</td>
                                    <td>
                                        <span class="badge bg-success">@enrollment.Course?.Credits</span>
                                    </td>
                                    <td>@enrollment.EnrolledOn.ToString("MMM dd, yyyy")</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <a asp-action="Delete" asp-route-studentId="@enrollment.StudentId" asp-route-courseId="@enrollment.CourseId" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Remove
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle"></i> <strong>No enrollments found.</strong>
                    @if (User.IsInRole("Admin"))
                    {
                        <text>Start by <a asp-action="EnrollStudent">enrolling a student</a>.</text>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card bg-light shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Enrollments</h5>
                    <p class="display-4 fw-bold text-primary">@Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Unique Students</h5>
                    <p class="display-4 fw-bold text-success">@Model.Select(e => e.StudentId).Distinct().Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Unique Courses</h5>
                    <p class="display-4 fw-bold text-info">@Model.Select(e => e.CourseId).Distinct().Count()</p>
                </div>
            </div>
        </div>
    </div>
</div>
